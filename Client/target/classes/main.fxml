<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<VBox fx:controller="ru.geekbrains.cloud.client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
       <HBox VBox.vgrow="ALWAYS">
           <ListView HBox.hgrow="ALWAYS" fx:id="clientsFiles"></ListView>
           <ListView HBox.hgrow="ALWAYS" fx:id="serverFiles"></ListView>
       </HBox>

        <HBox>
            <Button text="Select Client File" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#btnClickSelectedClientFile"></Button>
            <Button text="Select Server File" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#btnClickSelectedServerFile"></Button>
        </HBox>
    <Label fx:id="label1" text="..." maxWidth="-Infinity"></Label>
</VBox>