<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<VBox fx:controller="ru.geekbrains.cloud.client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <Label fx:id="cloud" text="Cloud Storage"  maxWidth="-Infinity"/>
        <HBox>
            <Label HBox.hgrow="ALWAYS" fx:id="local" text="Локальное хранилище" maxWidth="Infinity"/>
            <Label HBox.hgrow="ALWAYS" fx:id="server" text="Серверное хранилище" maxWidth="Infinity"/>
        </HBox>


       <HBox VBox.vgrow="ALWAYS">
           <ListView HBox.hgrow="ALWAYS" fx:id="clientsFiles"></ListView>
           <ListView HBox.hgrow="ALWAYS" fx:id="serverFiles"></ListView>
       </HBox>

        <HBox>

            <Button text="Отправить файл" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#clientUpload"></Button>
            <Button text="Удалить файл" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#clientDelete"></Button>
            <Button text="Обновить" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#clientRenew"></Button>

            <Button text="Скачать файл" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#clientDownload"></Button>
            <Button text="Удалить файл" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#serverDelete"></Button>
            <Button text="Обновить" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#serverRenew"></Button>
        </HBox>
</VBox>